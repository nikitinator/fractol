void	zoom_in_key(t_frct *frct)
{
	//frct->min_re *= 1.05;//frct->zoom_re_val;
	//frct->max_re *= 1.05;//frct->zoom_re_val;
	//frct->min_im *= 1.05;//frct->zoom_im_val;
	//frct->max_im *= 1.05;//frct->zoom_im_val;

	ratio_re = 1.0 / IMG_WIDTH / 2;	
	ratio_im = 1.0 / IMG_HEIGHT / 2;  	
	range_re = (frct->max_re - frct->min_re);
	range_im = (frct->max_im - frct->min_im);
	//zoom_in_key(frct);

	if (key == 1 || key == 4)
	{
		range_re *= (1 - frct->zoom_re_val); 
		range_im *= (1 - frct->zoom_im_val); 
0.95; 
		
	}
	else if (key == 2 || key == 5)
	{
		range_re *= 1.05;
		range_im *= 1.05;
	}

	frct->min_re = mouse_re - range_re * ratio_re;
	frct->max_re = mouse_re + range_re * (1 - ratio_re);
	frct->min_im = mouse_im - range_im * ratio_im;
	frct->max_im = mouse_im + range_im * (1 - ratio_im);
ft_putendl("__");
	printf("frct->min_re:%Lf\n", frct->min_re);
	printf("frct->max_re:%Lf\n", frct->max_re); scrn_upd(frct);
	printf("frct->min_im:%Lf\n", frct->min_im); 
   printf("frct->max_im:%Lf\n", frct->max_im);
	ft_putendl("__");
	ft_putendl("__");
}

void	zoom_out_key(t_frct *frct)
{
	frct->min_re *= 0.95;//frct->zoom_re_val;
	frct->max_re *= 0.95;//frct->zoom_re_val;
	frct->min_im *= 0.95;//frct->zoom_im_val;
	frct->max_im *= 0.95;//frct->zoom_im_val;
ft_putendl("__");
	printf("frct->min_re:%Lf\n", frct->min_re);
	printf("frct->max_re:%Lf\n", frct->max_re); scrn_upd(frct);
	printf("frct->min_im:%Lf\n", frct->min_im); 
   printf("frct->max_im:%Lf\n", frct->max_im);
	ft_putendl("__");
ft_putendl("__");
}
